%section
  .container
    .login-register
      .head-text.text-center
        %h2.head-text__headline Freeze Login
        %p.head-text__description Das neue Koop-Abenteuer mit deinen Freunden!
      = form_with url: login_path, class: 'login-form' do |f|
        = f.text_field :email, placeholder: 'E-Mail-Adresse'
        = f.password_field :password, placeholder: 'Passwort'
        .form-sub
          = f.label :remember_me, class: 'checkbox' do
            = f.check_box :remember_me
            .checkmark
            .description Angemeldet bleiben
          = link_to 'Passwort vergessen', frontend_reset_password_path
          =# link_to "Passwort vergessen?", "#"
        = f.submit "Login", class: 'button button--accent'
      .login-register__caption
        Noch nicht registriert?
        = link_to "Jetzt registrieren!", register_path
