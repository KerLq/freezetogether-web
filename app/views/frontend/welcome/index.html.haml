%section#introduction.section
  .container
    .introduction
      .introduction__headline.text-center
        %h4= t('.introduction')
        %p.head-text__description= t('.introduction_text')
      .introduction__buttons
        = link_to t('.introduction_more'), frontend_gameinfo_path, class: 'button button--primary'

%section#first-char.section.section--no-x-padding
  - Character.all.limit(3).each do |character|
    .character
      .character__container
        .character__image
          = show_svg character&.image if character&.image&.attached?
        .character__content
          .character__overline= character.title
          %h3.character__headline= character.name
          .character__description.mt-1= h(raw character.quote)
  .button-row
    = link_to t('.show_all'), frontend_gameinfo_path(anchor: 'characters'), class: 'button button--primary mt-4'

%section#news.section
  .container
    .head-text.text-center
      %h2.head-text__headline= t('.news')
      %p.head-text__description= t('.news_description')
    .news-cards
      =render @news

%section#newsletter.section.section--accent{style: 'display: none;'}
  .background-schatztruhe
  .container
    .newsletter
      .head-text
        %h2.head-text__headline= t('.newsletter')
        %p.head-text__description= t('.newsletter_description')
    .newsletter__button-group
      %input#phone{name: "email", placeholder: t('placeholder.email'), type: "email"}/
      %button.button.button--secondary= t('.newsletter_subscribe')

%section#features.section
  .container
